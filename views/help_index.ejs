    </div>
    <div class="footer-bottom">
      <p>© 2025 ShelterSeek Website. All rights reserved.</p>
    </div>
  </footer>
<!-- Accordion Script -->
<script>
    let currentOpen = null;

    function toggleFaq(index) {
      if (currentOpen !== null && currentOpen !== index) {
        document.getElementById("answer-" + currentOpen).style.display = "none";
        document.getElementById("icon-" + currentOpen).classList.remove("fa-times");
        document.getElementById("icon-" + currentOpen).classList.add("fa-plus");
      }

      const answerEl = document.getElementById("answer-" + index);
      const iconEl = document.getElementById("icon-" + index);

      if (answerEl.style.display === "block") {
        answerEl.style.display = "none";
        iconEl.classList.remove("fa-times");
        iconEl.classList.add("fa-plus");
        currentOpen = null;
      } else {
        answerEl.style.display = "block";
        iconEl.classList.remove("fa-plus");
        iconEl.classList.add("fa-times");
        currentOpen = index;
      }
    }
</script>
</body>
</html>