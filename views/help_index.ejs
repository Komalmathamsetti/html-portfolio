        <link rel="stylesheet" href="/styles/help.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    </head>
    <body>
    <!---Navbar--->
    <header>
    <div class="top-bar">
      <div class="logo">Shelter<span class="highlight">Seek</span></div>

      <div class="search-bar">
        <input type="text" placeholder="Where to go!" />
        <button class="search-btn"><i class="fas fa-search"></i></button>
      </div>

      <nav class="nav-icons">
        <a href="/about">About</a>
        <a href="/wishlist"><i class="far fa-heart"></i></a>
        <a href="/messages"><i class="fas fa-envelope"></i></a>
      </nav>
    </div>
    </header>
    <section class="help-container">
        <h1>We are here to help you !</h1>
        <div class="faq-box">
            <% const faqData=[{
                question:"How do I book a room?",
                answer: 'Go to the "Rooms" section, select your dates, and choose a room type. Enter guest details and payment information. Confirm your booking via email.'
            },
            {
                question: "Can I modify or cancel my booking?",
                answer: 'Yes! Visit "My Bookings" in your account to edit dates or cancel. Cancellations are free up to [48 hours/days] before check-in. Late cancellations may incur a fee (see Cancellation Policy).'
            },
            {
                question: "What payment methods do you accept?",
                answer: 'Credit/debit cards (Visa, Mastercard, Amex). Digital wallets (Apple Pay, Google Pay). Note: Full payment is required at booking.'
            },
            {
                question: "I didn't recieve a conformation mail. What should I do?",
                answer: 'Check your spam/junk folder. Ensure you entered the correct email address. Contact support at [email/phone] for assistance.'
            },
            {
                question: "How do I check my room availability in real-time?",
                answer: 'Use the search bar on the home page to check room availability instantly.'
            },
            {
                question: "Can I request special accommodations(e.g: wheelchair access)?",
                answer: 'Yes! Mention requirements in the "Special Requests" box during booking.Contact us in advance for accessibility needs. Additional charges may apply for extra beds/amenities.'
            },
            {
                question: "What is your Cancellation policy?",
                answer: 'Free cancellation: Up to [48 hours] before check-in. Partial refund: [24–48 hours] before check-in. No refund: Cancellations within [24 hours].'
            }]; %>
        <% faqData.forEach((faq, index) => { %>
        <div class="faq-item" onclick="toggleFaq(<%= index %>)">
          <div class="faq-question">
            <span><%= faq.question %></span>
            <i id="icon-<%= index %>" class="fas fa-plus"></i>
          </div>
          <div id="answer-<%= index %>" class="faq-answer"><%= faq.answer %></div>
        </div>
        <% }); %>
        </div>
        <a href='/ex'><button class="more-help-button">More Help</button></a>
    </section>
    <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-section about">
